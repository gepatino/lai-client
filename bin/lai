#!/bin/bash

# How to use lai from anywhere:
# =============================
# If you have ~/bin in your $PATH,
# make a symbolic link to this file:
# ln -s /home/xleo/src/lvidarte/lai/client/bin/lai ~/bin

#LAI_CLI_ENV_PATH=
#LAI_CLI_MODULE_PATH=

if [ -z "$LAI_CLI_MODULE_PATH" ] || [ -z "$LAI_CLI_ENV_PATH" ]
then
    echo "You need to set up the LAI_CLI_ENV_PATH and LAI_CLI_MODULE_PATH"
    echo "environment vars with the absolute path to lai virtualenv dir and"
    echo "the lai module dir respec."
else
    # Export path for virtualenv
    export PYTHONPATH=$LAI_CLI_MODULE_PATH

    # Activate virtualenv
    source $LAI_CLI_ENV_PATH/bin/activate

    # Run the app
    python $LAI_CLI_MODULE_PATH/lai/app.py "$@"

    # Finally..
    deactivate
fi

